<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".job_Details">

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/detailDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detailTitle"
        app:layout_constraintStart_toStartOf="@id/detailTitle"
        app:layout_constraintEnd_toEndOf="@id/detailTitle" />

    <TextView
        android:id="@+id/detailLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detailDescription"
        app:layout_constraintStart_toStartOf="@id/detailDescription"
        app:layout_constraintEnd_toEndOf="@id/detailDescription" />

    <TextView
        android:id="@+id/detailPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/detailLocation"
        app:layout_constraintStart_toStartOf="@id/detailLocation"
        app:layout_constraintEnd_toEndOf="@id/detailLocation" />

    <!-- Add more TextViews or other Views for additional job details as needed -->

</androidx.constraintlayout.widget.ConstraintLayout>